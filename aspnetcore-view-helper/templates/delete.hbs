{{#if model}}@model {{model}}

{{/if}}@{
{{#if layoutPage}}
    Layout = "{{layoutPage}}";
{{/if}}
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>{{modelName}}</h4>
    <hr />
    <dl class="row">
        {{#each properties}}
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.{{this}})
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.{{this}})
        </dd>
        {{/each}}
    </dl>

    <form asp-action="Delete">
        {{#if primaryKeyProperty}}
        <input type="hidden" asp-for="{{primaryKeyProperty}}" />
        {{/if}}
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>